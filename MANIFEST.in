# Include public interface files
include README.md
include LICENSE
include NOTICE
include SECURITY.md
include init.sh
recursive-include docs *.md
recursive-include tools *.py
recursive-include examples *.py

# EXCLUDE the Private Invariant (The Muscle)
recursive-exclude omega *.cpp
recursive-exclude omega *.h
recursive-exclude omega *.so
recursive-exclude omega *.dylib
recursive-exclude omega *.dll

# Exclude local development artifacts
global-exclude __pycache__
global-exclude *.py[cod]
global-exclude .DS_Store
exclude node_id.json